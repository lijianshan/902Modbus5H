        android:layout_marginTop="8dp"
        android:text="风速"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/cool_speed_minus"
        app:layout_constraintEnd_toEndOf="@+id/cool_mode_refrigera"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toStartOf="@+id/cool_mode_refrigera"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

