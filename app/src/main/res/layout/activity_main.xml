        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/co2_title"
        app:layout_constraintStart_toStartOf="@+id/co2_title"
        app:layout_constraintTop_toTopOf="@+id/pm25_value" />

    <ImageView
        android:id="@+id/co2_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
